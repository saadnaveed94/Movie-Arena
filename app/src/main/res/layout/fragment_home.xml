<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblackcard"
    tools:context="com.example.saadna.moviearena.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:background="@color/colorblackbackground">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rectvone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorblackcard"


                >


            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="490dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rectvone"
                android:layout_marginTop="20sp"
                android:background="@color/colorblackcard">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:text="     Coming Soon"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rechomenewsone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rectvtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="20dp"

                android:background="@color/colorblackcard">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rechomethree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rectvtwo"
                android:layout_marginTop="29dp"
                android:background="@color/colorblackcard"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rectvtwo"
                android:background="@color/colorblackcard"
                android:text="     Top of 2018"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"

                />


        </RelativeLayout>

    </ScrollView>

</FrameLayout>
