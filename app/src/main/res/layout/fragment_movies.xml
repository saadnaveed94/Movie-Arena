<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.saadna.moviearena.Movies">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2100dp"
            android:background="@color/colorblackbackground"
            android:weightSum="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rectvone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.41"
                android:background="@color/colorblackcard">


            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/rectvone"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"

                android:background="@color/colorblackcard">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:text="Coming Soon"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rectvtwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="350dp"


                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginTop="8dp"
                android:background="@color/colorblackcard">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recmoviethree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text="Top Movie News 2018"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="17dp"
                android:background="@color/colorblackcard">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Rated Movies"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recmoviefour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView3">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="1050dp"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="18dp"
                android:background="@color/colorblackcard">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/relativeLayout5"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:text="Popular Genres"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recmoviefive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</FrameLayout>
