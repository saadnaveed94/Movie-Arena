<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.example.saadna.moviearena.CELEBS">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <TextView
            android:id="@+id/labellist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/celeblist"

            android:background="@color/colorblackcard"
            android:text="Celeb News"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/celeblist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelnews"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"


            >

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/labelnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Celeb Ratings and Rankings"
            android:textColor="#ffffff"
            android:background="@color/colorblackcard"

            android:textSize="30dp"

            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/celebnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/labellist"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>
